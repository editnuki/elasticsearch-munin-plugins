#!/usr/bin/env python

## GENERATED FILE - DO NOT EDIT

import urllib2
import sys
import os

try:
    import json
except ImportError:
    import simplejson as json


def getNodes():
    host = os.environ.get("host", "127.0.0.1")
    port = 9200
    url = "http://%s:%d/_cluster/stats?human&pretty" % (host, port)
    req = urllib2.Request(url)
    raw = urllib2.urlopen(req).read()
    return json.loads( raw )["nodes"]

min = "min"
max = "max"
avg = "avg"

def doData():
    print min + ".value " + str( getNodes()["process"]["open_file_descriptors"]["min"] )
    print max + ".value " + str( getNodes()["process"]["open_file_descriptors"]["max"] )
    print avg + ".value " + str( getNodes()["process"]["open_file_descriptors"]["avg"] )
#    print max + ".value " + str( getNodes()["jvm"]["mem"]["heap_max_in_bytes"] / 1000 )

def doConfig():

    print "graph_title elasticsearch open_file_descriptors"
    print "graph_args --base 1000 -l 0 "
    print "graph_vlabel open_file_descriptors"
    print "graph_category elasticsearch"

    print min + ".label " + min
    print max + ".label " + max
    print avg + ".label " + avg



if __name__ == "__main__":
    if len(sys.argv) > 1 and sys.argv[1] == "config":
        doConfig()
    else:
        doData()
